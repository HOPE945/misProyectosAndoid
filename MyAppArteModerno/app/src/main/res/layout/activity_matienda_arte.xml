<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MATiendaArte"
    android:orientation="vertical"
    android:background="#56626f">

    <TextView
        android:id="@+id/txtViewTituloAdquirir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido a Tienda de Arte Moderno"
        android:textSize="35sp"
        android:layout_gravity="center"
        android:layout_margin="10sp"
        android:gravity="center"
        android:textColor="#FFD5CDCD"
        />
    
    <ListView
        android:id="@+id/listObras1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15sp"
        android:divider="#324760"
        android:dividerHeight="1sp"
        />

</LinearLayout>