<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#56626f">

    <TextView
        android:id="@+id/txtViewTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido a la Tienda de Arte Moderno"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:layout_margin="10sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#D5CDCD"
        />

    <ImageView
        android:id="@+id/imgLogoTienda"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:src="@drawable/logotam"
        android:layout_gravity="center"
        android:layout_margin="10sp"

        />

    <TextView
        android:id="@+id/txtViewSubTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Elija una categoria para conocer nuestros productos"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_margin="5sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#FFD5CDCD"
        />

    <ListView
        android:id="@+id/listCategorias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:background="#BDB7B7"
        android:divider="#324760"
        android:dividerHeight="1sp"
        />


</LinearLayout>