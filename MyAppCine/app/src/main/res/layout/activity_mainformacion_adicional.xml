<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MAInformacionAdicional"
    android:orientation="vertical"
    android:background="@color/gris"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INFORMACIÃ“N"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:layout_marginTop="10sp"
        android:layout_gravity="center"
        />

    <ImageView
        android:id="@+id/imgInfoAdicional"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:layout_gravity="center"
        android:layout_margin="5sp"
        android:src="@mipmap/ic_launcher"
        />
    <TextView
        android:id="@+id/txtNomPeliInfoAdicional"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nmbre peli"
        android:textSize="20sp"
        android:textColor="@color/purple_700"
        android:layout_marginBottom="10sp"
        android:layout_gravity="center"
        android:textStyle="bold"
        />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="1sp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/txtMonedaPeliInfoAdicional"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Precio por boleto Q. "
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_margin="1sp"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="100sp"

            />
        <TextView
            android:id="@+id/txtPrecioPeliInfoAdicional"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=".."
            android:textSize="20sp"
            android:textColor="@color/purple_700"
            android:layout_margin="1sp"
            android:layout_marginBottom="10sp"
            android:textStyle="bold"
            />
    </LinearLayout>


</LinearLayout>



    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tlId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#302B2B"
        app:tabTextColor="@color/white"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        />

    <FrameLayout
        android:id="@+id/flContenedorInfoAdicional"
        android:layout_width="match_parent"
        android:layout_height="280sp"
        android:layout_margin="5sp"
        android:layout_marginBottom="10sp"

        />

    <Button
        android:id="@+id/btnComprarBoletos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="20sp"
        android:paddingLeft="20sp"
        android:layout_marginBottom="1sp"
        android:layout_gravity="center"
        android:backgroundTint="#302B2B"
        android:text="COMPRAR BOLETOS"
        android:background="@drawable/btn_radius"
        app:cornerRadius="8sp"
        android:textSize="10sp"
        android:textColor="@color/white"
        android:layout_margin="10sp"/>


</LinearLayout>