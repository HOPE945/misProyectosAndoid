<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MACompraBoletos"
    android:orientation="vertical"
    android:layout_margin="5sp"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DATOS DE COMPRA"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_marginTop="40sp"
        android:textSize="25sp"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5sp">
        <EditText
            android:id="@+id/edtNombre"
            android:layout_width="220sp"
            android:layout_height="wrap_content"
            android:hint="Ingrese su nombre"
            android:inputType="text"
            android:layout_marginTop="80sp"

            />
        <EditText
            android:id="@+id/edtApellido"
            android:layout_width="220sp"
            android:layout_height="wrap_content"
            android:hint="Ingrese su apellido"
            android:inputType="text"
            android:layout_marginTop="120sp"
            />
        <EditText
            android:id="@+id/edtNit"
            android:layout_width="220sp"
            android:layout_height="wrap_content"
            android:hint="Ingrese su Nit"
            android:inputType="number"
            android:layout_marginTop="150sp"
            />

        <EditText
            android:id="@+id/edtCantidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="cantidad boletos"
            android:inputType="number"
            android:layout_marginTop="120sp"
            android:layout_marginLeft="240sp"
            android:layout_marginRight="5sp"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PRECIO Q. "
            android:textColor="@color/black"
            android:layout_marginTop="170sp"
            android:layout_marginLeft="240sp"
            />
        <TextView
            android:id="@+id/txtPrecioBoletos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="..."
            android:textColor="@color/black"
            android:layout_marginTop="170sp"
            android:layout_marginLeft="310sp"
            />
            <TextView
            android:id="@+id/textViewTotalAPagar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="..."
            android:textColor="#DD691B"
            android:layout_marginTop="250sp"
            android:textSize="15sp"
            />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5sp"
        android:layout_marginTop="5sp"
        android:layout_marginEnd="5sp"
        android:layout_marginBottom="5sp">


        <Button
            android:id="@+id/btnRealizarCompra"
            android:layout_width="140sp"
            android:layout_height="120sp"
            android:layout_marginLeft="115sp"
            android:layout_marginTop="280sp"
            android:background="@drawable/entrada"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnRealizarCompra"
            android:gravity="center"
            android:text="CLIK PARA COMPRAR BOLETOS"
            android:textColor="@color/black"
            android:textSize="15sp" />
    </RelativeLayout>
    <Button
        android:id="@+id/btnRegresar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="20sp"
        android:paddingLeft="20sp"
        android:layout_marginBottom="1sp"
        android:layout_gravity="center"
        android:backgroundTint="#302B2B"
        android:text="REGRESAR A LA PANTALLA DE INICIO"
        android:background="@drawable/btn_radius"
        app:cornerRadius="8sp"
        android:layout_marginEnd="5sp"
        android:textSize="10sp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="550sp"/>

</RelativeLayout>